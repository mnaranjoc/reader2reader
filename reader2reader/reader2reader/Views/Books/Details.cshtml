@model reader2reader.Models.Book

@{
    ViewBag.Title = "Detalles";
}

<div class="container">
    <p>
        @Html.ActionLink("Regresar", "Index") |
        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }) |
        @Html.ActionLink("Eliminar", "Delete", new { id = Model.Id })
    </p>

    <h2>@ViewBag.Title</h2>

    <div class="row">
        <div class="col-sm-4">
            <img class="img-rounded" width="100%" height="100%" style="display: block; text-align:center;" src="@Model.ImageURL">
        </div>
        <div class="col-sm-8">
            <h2>@Html.DisplayFor(model => model.Title)</h2>

            <h4>@Html.DisplayFor(model => model.Author)</h4>

            <p>@Html.DisplayFor(model => model.Genre)</p>

            <p>@Html.DisplayFor(model => model.Price)</p>

            <p>@Html.DisplayFor(model => model.ImageURL)</p>

            <hr />

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    <label class="control-label">Mensaje para el vendedor</label>
                    @Html.TextArea("SenderMessage", string.Format("Hola! Me interesa el libro \"{0}\", por favor contáctame.", @Model.Title), new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label class="control-label">Email</label>
                    @Html.TextBox("SenderEmail", (string)ViewBag.UserEmail, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Enviar" />
                    </div>
                </div>
            }
        </div>
    </div>
</div>